{% extends "templates/layout.twig" %}

{% block css %}
<link rel="stylesheet" href="public/css/contact.css">
{% endblock %}

{% block main %}
{% if (message) %}
  <p class="message">Your Message has been sent.</p>
{% endif %}
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Contact Us</h1>
                    <p>To discuss your catering needs for your wedding day with your local and friendly professional caterers, contact the team at Mr Chef.</p>
                </div>
            </div>
        </div>
    </section>



    <section class="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="section-heading">
                        <h2>Message</h2>
                    </div>
                    <form id="contact" action="" method="post">
                      <input hidden name="contactMessage" value="true">
                        <div class="row">
                            <div class="col-md-6">
                                <fieldset>
                                    <input name="name" type="text" class="form-control" id="name" placeholder="Your name..." required="">
                                </fieldset>
                                <fieldset>
                                    <input name="email" type="email" class="form-control" id="email" placeholder="Your email..." required="">
                                </fieldset>
                                <fieldset>
                                    <input name="phone" type="tel" class="form-control" id="phone" placeholder="Your phone..." required="">
                                </fieldset>
                            </div>
                            <div class="col-md-6">
                                <fieldset>
                                    <textarea name="message" rows="6" class="form-control" id="message" placeholder="Your message..." required=""></textarea>
                                </fieldset>
                                <fieldset>
                                    <button type="submit" id="form-submit" class="btn">Send Message</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="section-heading contact-info">
                        <h2>Contact Info</h2>
                        <p>For professional catering throughout the West Midlands and Warwickshire in areas including Atherstone, Bedworth, Coventry, Leamington Spa, Nuneaton and Warwick, contact our friendly team to discuss your requirements via any of the methods on this page.
                        </p>
                        <address>
                          Unit 9 Building 16 </br>
                          Bilton Industrial Estate </br>
                          Humber Avene </br>
                          Coventry </br>
                          CV3 1JL </br>
                        </address>
                        <a href="tel:02476453364">024 7645 3364</a> </br>
                        <a href="tel:07753361522"> 07753 361 522</a>

                    </div>
                </div>
            </div>
        </div>
    </section>



    <section class="map">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="map">
        <!-- How to change your own map point
            1. Go to Google Maps
            2. Click on your location point
            3. Click "Share" and choose "Embed map" tab
            4. Copy only URL and paste it within the src="" field below
        -->
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2434.211708328098!2d-1.4916881479717614!3d52.40283917969289!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48774bce4e94299f%3A0x733a10a8ab08d075!2sUnit%209%20Building%2016%2C%20Bilton%20Industrial%20Estate%2C%20Humber%20Ave%2C%20Coventry%20CV3%201JL!5e0!3m2!1sen!2suk!4v1628717104777!5m2!1sen!2suk" width="100%" height="500" frameborder="0" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
